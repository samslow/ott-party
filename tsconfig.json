{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"~": ["src/*"],
			"tests": ["tests/*"],
			"@src/*": ["src/*"],
			"@components/*": ["src/components/*"],
    },
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
	],
}